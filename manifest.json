{
  "manifest_version": 3,
  "name": "Canvas RAG Assistant",
  "version": "1.0",
  "description": "Extract PDFs from Canvas courses and chat with course materials using AI.",
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "settings.html",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs",
    "identity",
    "identity.email"
  ],

  "host_permissions": [
    "*://*.instructure.com/*",
    "*://canvas.education.lu.se/*",
    "*://*.canvas.com/*",
    "*://*.canvaslms.com/*",
    "https://*.googleapis.com/*",
    "https://*.firebaseapp.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.instructure.com/*", 
        "*://canvas.education.lu.se/*",
        "*://*.canvas.com/*",
        "*://*.canvaslms.com/*"
      ],
      "js": [
        "state-management.js",
        "smart-navigator.js",
        "stateful-page-scanner.js",
        "content-script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}