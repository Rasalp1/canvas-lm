{
  "manifest_version": 3,
  "name": "Canvas LM",
  "version": "1.1.0",
  "description": "AI-powered study assistant for Canvas. Extract PDFs and chat with course materials using a LLM RAG system.",
  "author": "Rasmus Alpsten",
  "homepage_url": "https://github.com/Rasalp1/canvas-lm",
  "minimum_chrome_version": "88",
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png",
    "192": "android-chrome-192x192.png",
    "512": "android-chrome-512x512.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "favicon-16x16.png",
      "32": "favicon-32x32.png",
      "192": "android-chrome-192x192.png",
      "512": "android-chrome-512x512.png"
    }
  },
  "options_page": "settings.html",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "tabs",
    "identity",
    "identity.email",
    "downloads",
    "cookies"
  ],

  "host_permissions": [
    "*://*.instructure.com/*",
    "*://canvas.education.lu.se/*",
    "*://*.canvas.com/*",
    "*://*.canvaslms.com/*",
    "https://*.googleapis.com/*",
    "https://*.firebaseapp.com/*",
    "https://*.cloudfunctions.net/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.instructure.com/*", 
        "*://canvas.education.lu.se/*",
        "*://*.canvas.com/*",
        "*://*.canvaslms.com/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/*", "*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}